<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:padding="@dimen/main_pad"
    android:background="@color/dark_theme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Personal details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/personal_details"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Personal details"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umang Rathod"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/wix_display"
                        android:layout_alignParentStart="true"/>
                    <ImageView
                        android:id="@+id/change_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/edit"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile picture"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/profile_picture_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umang"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/wix_display"
                        android:layout_alignParentStart="true"/>
                    <ImageView
                        android:id="@+id/change_dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/edit"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#AAA"/>

        <!-- Security details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/security"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Security"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*******"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lock the app"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not locked"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAA"
            android:layout_marginTop="10dp"/>

        <!-- Sync details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sync"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Sync"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync photos"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not synced"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/wix_display"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAA"
            android:layout_marginTop="10dp"/>

        <!-- Share and Log out details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/share"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Share the app"
                    android:textColor="@color/main_color"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/logout"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Log out"
                    android:textColor="@color/red"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/wix_display"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAA"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>
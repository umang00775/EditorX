                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/cyan_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"

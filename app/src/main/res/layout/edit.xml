                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/vignette"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"/>

                        <TextView
                            android:id="@+id/vignette"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/vignette"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rotate_options">
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/left_rotate"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/rotate_left" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/rotateL"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/right_rotate"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/rotate_right"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/rotateR"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/filter_options">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/no_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/no_filter"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/original"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/red_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/red_filter"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/red"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/pink_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/pink_filter"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/pink"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/orange_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView

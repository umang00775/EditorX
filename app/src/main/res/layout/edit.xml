                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/orange_filter"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/orange"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/yellow_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/yellow_filter"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/hot_pink_filter" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/yellow"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/green_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@raw/green_filter"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/wix_display"
                            android:text="@string/green"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/blue_filter"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:cardCornerRadius="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true">
                            <ImageView
                                android:layout_width="match_parent"
